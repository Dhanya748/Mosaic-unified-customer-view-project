{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI API (main.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "run",
        "--reload"
      ],
      "module": "uvicorn"
    },
    {
      "name": "Run CLI Agent (run_agent.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/segmented_olist_agent/run_agent.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
